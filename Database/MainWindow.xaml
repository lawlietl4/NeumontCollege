<Window x:Class="Database.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Title="DatabaseDisplay" Height="450" Width="800"
        >
    <Grid>
        <DataGrid x:Name="dgd" ItemsSource="{Binding}" Grid.Column="1">
            
        </DataGrid>
        <Button x:Name="UpdateBtn" Content="update" Click="UpdateBtn_Click" Grid.Row="1" Margin="250,20,250,30"/>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
    </Grid>
</Window>
